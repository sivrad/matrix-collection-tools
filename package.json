        "eslint-plugin-jsdoc": "30.7.8",
        "json-schema-to-typescript": "^10.1.3",
        "mocha": "8.2.1",
        "prettier": "2.1.2",
        "ts-node": "9.1.0",
        "typedoc": "0.19.2",
        "typescript": "4.0.5"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "ajv": "^8.0.1",
